
<%= form_with(model: list) do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <div class="form-group">
      <h4>Add New Checklist Item</h4>
      <%= form.label :title %>
      <%= form.select :title, @titles,{}, class: 'custom-select' %>
    </div>
    <div class="field form-group">
      <%= form.label :item %>
      <%= form.text_field :item, class: 'form-control' %>
    </div>
    <div class="field" style="visibility:hidden;">
      <%= form.label :completed %>
      <%= form.check_box :completed %>
    </div>
    <div class="actions form-group">
      <%= form.submit 'Add Item', class: 'btn btn-outline-success' %>
    </div>
  <div>
  <br>
  <div class="field">
    <%= link_to 'Delete all marked items', home_remove_checked_items_path, class: 'btn btn-outline-danger btn-sm', data: { confirm: 'Are you sure?' } %>
  </div>

<% end %>
